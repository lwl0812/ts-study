{
  "compilerOptions": {
    "target": "es5",                           
    "module": "commonjs",                      
    "moduleResolution": "node",                 
    "experimentalDecorators": true,             
    "allowSyntheticDefaultImports": true,       
    "sourceMap": true,                          
    "strict": true,                            
    "noImplicitAny": true,                      
    "alwaysStrict": true,                      
    "declaration": true,        
    "removeComments": true,                    
    "noImplicitReturns": true,                  
    "importHelpers": true,                     
    "lib": ["es6", "dom"],                     
    "typeRoots": ["node_modules/@types"],
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": [                                  
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
  ]
}